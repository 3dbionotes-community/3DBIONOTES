  %body#body
    %div.body_div{:style=>"position:absolute;left:8px;right:0px;top:0px;bottom:0px;"}
      #loading{:style=>'width:100%;height:100%;display:none;'}
        =image_tag("loading.gif",size:"200x200",:style=>"display:block;margin:auto;position:relative;top:50%;transform:translateY(-50%);")
      = yield
