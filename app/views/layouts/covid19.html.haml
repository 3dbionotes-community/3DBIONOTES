%html(lang="en")
  %head
    = stylesheet_link_tag('webserver/webserver_style.css')
    = stylesheet_link_tag('application')
    = stylesheet_link_tag("https://fonts.googleapis.com/css?family=Lato:400,700,400italic&amp;display=swap")
    = stylesheet_link_tag('webserver/main.css')
    = stylesheet_link_tag('webserver/carousel.css')
    = stylesheet_link_tag('webserver/proteome.css')
    = stylesheet_link_tag('/font-awesome/css/font-awesome.min.css')

    = javascript_include_tag('application')
    = javascript_include_tag('webserver/carousel')
    = javascript_include_tag('webserver/popover')
    = javascript_include_tag('webserver/collapse')
    = javascript_include_tag('covid19')
  %body
    %header.covid19Header.d-flex.align-items-center
      .container.text-center.text-sm-center.text-md-center.text-lg-left.text-xl-left
        %img#mainLogoCovid19{:src => "/assets/3DBionotes-Logo-CoVid-19-revisited.jpg"}/
        #partnersCovid19.d-inline-block.float-lg-right.float-xl-right
          .row
            .col
              %img.partnerLogo{:src => "/assets/80_Ministerio_de_Ciencia_e_Innovacion.jpg"}/
              %img.partnerLogo{:src => "/assets/100_CSIC.jpg", :style => "width: 120px;"}/
              %img.partnerLogo{:src => "/assets/CNB_logo-30fc3586b103c993eeacd7d1f9a0d02dbd445703f5ab29e8cc9e26a48d35ad0d.jpg", :style => "width: 90px;"}/
          .row
            .col
              %img.partnerLogo{:src => "/assets/2020_03_15_No_23-uuuuhh.jpg", :style => "width: 100px;"}/
              %img.partnerLogo{:src => "/assets/inbelixir.png"}/
              %img.partnerLogo{:src => "/assets/instruct-eric-logo-noline.png"}/

    %nav#menuBar.navbar.navbar-dark.navbar-expand-md.bg-primary
      .container
        %a.navbar-brand.d-print-none.d-md-none.d-lg-none.d-xl-none{:href => "#"}
          %strong 3DBionotes-WS
        %button.navbar-toggler{"data-target" => "#navcol-1", "data-toggle" => "collapse"}
          %span.sr-only Toggle navigation
          %span.navbar-toggler-icon
        #navcol-1.collapse.navbar-collapse.navbarLinks
          %ul.nav.navbar-nav.mx-auto
            = menu_item("HOME", {controller: "webserver", action: "home"})
            = menu_item("CoVid-19", {controller: "covid19", action: "index",})
            = menu_item("SUBMIT", {controller: "webserver", action: "submit"})
            = menu_item("NETWORK", {controller: "webserver", action: "network"})
            = menu_item("QUERY", {controller: "webserver", action: "query"})
            = menu_item("API", {controller: "webserver", action: "api"})
            = menu_item("HELP", {controller: "webserver", action: "help"})
            = menu_item("ABOUT US", "http://biocomputingunit.es/")

    = yield

    .bg-primary.footer-dark#mainFooter
      %footer
        .container.text-center
          .row
            .col
              %h4
                %strong
                  3DBIONOTES-
                  %em WS
