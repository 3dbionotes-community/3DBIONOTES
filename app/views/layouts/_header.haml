%header
  %nav#Navbar.navbar.navbar-light.navbar-expand-md.text-sm-center.d-flex
    .container-fluid
      #Logo.d-flex.align-items-center
        %a.navbar-brand{:href => ws_path}
          = image_tag "3DBionotesLogo-small.jpg", height: 72, style: "height: auto;width: 260px;"
        %button.navbar-toggler{"data-target" => "#navcol-1", "data-toggle" => "collapse"}
          %span.sr-only Toggle navigation
          %span.navbar-toggler-icon
        #navcol-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.nav-item.d-xl-flex.align-items-xl-center{:style => "width: auto;"}
              #viewerMenuButton.nav-item.dropdown.btn-primary{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :style => "margin-right: 0px;margin-left: 0px;", :type => "button"}
                %a.dropdown-toggle.active{"aria-expanded" => "false", :href => "#"} MENU
              .dropdown-menu
                %a.dropdown-item.active{:href => ws_path} HOME
                %a.dropdown-item{:href => ws_covid19_path} COVID-19 Structural Hub
                %a.dropdown-item{:href => ws_viewer_path} VIEWER
                %a.dropdown-item{:href => ws_api_path} API
                %a.dropdown-item{:href => ws_help_path} HELP
        #Slogan.text-left.d-sm-block.ml-4
          %span#viewerSlogan
            An ELIXIR Recommended
            %br/
            Interoperability Resource
      #partnersLogos.align-items-center
        %span Funded by:
        %a{:href=>"https://www.csic.es/", :target => "_blank", :title => "CSIC - Spanish National Research Council"}
          = image_tag "100_CSIC.jpg", height: 60, alt: "CSIC - Spanish National Research Council"
        %a{:href=>"http://www.cnb.csic.es/index.php/", :target => "_blank", :title => "CNB - Spanish National Centre for Biotechnology"}
          = image_tag "CNB_logo.jpg", height: 40, alt: "CNB - Spanish National Centre for Biotechnology"
        %a{:href=>"https://instruct-eric.org/", :target => "_blank", :title => "Instruct-ERIC"}
          = image_tag "instruct-eric-logo-noline.png", height: 40, alt: "Instruct-ERIC", style: "margin-left: 20px;"
        %a{:href=>"https://eoscfuture.eu/", :target => "_blank", :title => "EOSC Future"}
          = image_tag "eosc_future_logo.png", height: 48, alt: "EOSC Future", style: "margin-left: 16px;"
        %a{:href=>"https://inb-elixir.es/", :target => "_blank", :title => "INB - Spanish National Bioinformatics Institute"}
          = image_tag "inbelixir.png", height: 48, alt: "INB - Spanish National Bioinformatics Institute", style: "margin-left: 16px;"
