          %img{:height => "40", :src => "/assets/instruct-eric-logo-noline.png", :alt => "Instruct-ERIC", :style => "margin-left: 20px;"}/
        %a{:href=>"https://eoscfuture.eu/", :target => "_blank", :title => "EOSC Future"}
          %img{:height => "48", :src => "/assets/eosc_future_logo.png", :alt => "EOSC Future", :style => "margin-left: 16px;"}/
        %a{:href=>"https://inb-elixir.es/", :target => "_blank", :title => "INB - Spanish National Bioinformatics Institute"}
