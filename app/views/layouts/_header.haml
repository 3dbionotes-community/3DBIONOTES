%header
  %nav#Navbar.navbar.navbar-light.navbar-expand-md.text-sm-center.d-flex
    .container-fluid
      #Logo.d-flex.align-items-center
        %a.navbar-brand{:href => ws_path}
          = image_tag "3DBionotesLogo-small.jpg", {:height => "72", :style => "height: auto;width: 260px;"}
        %button.navbar-toggler{"data-target" => "#navcol-1", "data-toggle" => "collapse"}
          %span.sr-only Toggle navigation
          %span.navbar-toggler-icon
        #navcol-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.nav-item.d-xl-flex.align-items-xl-center{:style => "width: auto;"}
              #viewerMenuButton.nav-item.dropdown.btn-primary{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :style => "margin-right: 0px;margin-left: 0px;", :type => "button"}
                %a.dropdown-toggle.active{"aria-expanded" => "false", :href => "#"} MENU
              .dropdown-menu
                %a.dropdown-item.active{:href => ws_path} HOME
                %a.dropdown-item{:href => ws_covid19_path} COVID-19 Structural Hub
                %a.dropdown-item{:href => ws_viewer_path} VIEWER
                %a.dropdown-item{:href => ws_api_path} API
                %a.dropdown-item{:href => ws_help_path} HELP
        #Slogan.text-left.d-sm-block.ml-4
          %span#viewerSlogan
            An ELIXIR Recommended
            %br/
            Interoperability Resource
