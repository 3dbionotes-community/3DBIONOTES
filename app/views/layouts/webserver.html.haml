                  = image_tag 'CNB_logo.jpg', alt: 'CNB-logo', height: '50'
              %tr
                %td
                  = image_tag 'estevirusloparamosunidos.png', alt: 'CoVid_Campain-logo', height: '50'
                %td
                  = image_tag 'https://instruct-eric.eu/templates/instructeric/images/logos/instruct-eric-logo-noline.png', alt: 'Intruct-logo', height: '50'
                %td
                  = image_tag 'https://inb-elixir.es/sites/default/files/inbelixir.png', alt: 'INB_Elixir_Spain-logo', height: '50'

