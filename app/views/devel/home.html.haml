    =image_tag("partners.png",id:'partners_logo')
  #menu
    =image_tag("3dbionotes_logo_small.png",height:'50',width:'140')
    %ul#topnav
      %li
        %a.nostyle.menu{:href=>"/devel",:style=>"font-weight:bold;"}HOME
      %li
        %a.nostyle.menu{:href=>"/devel#query",:style=>"font-weight:bold;"}QUERY
      %li
        %a.nostyle.menu{:href=>"/devel#help",:style=>"font-weight:bold;"}HELP
      %li
        %a.nostyle.menu{:href=>"/devel#disclaimer",:style=>"font-weight:bold;"}DISCLAIMER
  #topFrame
    #molTitle
      #{@moleculeTitle}
    #secondForm
      = form_tag({controller: "devel", action: "home"}, :method => :get,id: "selectOptionForm") do
        %h1{:style=>"display:inline;"}
          -if @identifierType=="EMDB"
            %a.nostyle.menu{:href=>"http://www.ebi.ac.uk/pdbe/entry/emdb/#{@identifierName}",:target=>"_blank",:style=>"font-family: Verdana, Arial, Helvetica, sans-serif;color:#074987;font-size:18px;"}
              =@identifierName.upcase 
          -elsif @identifierType=="PDB"
            %a.nostyle.menu{:href=>"http://www.rcsb.org/pdb/explore/explore.do?structureId=#{@identifierName}",:target=>"_blank",:style=>"font-family: Verdana, Arial, Helvetica, sans-serif;color:#074987;font-size:18px;"}
              =@identifierName.upcase
          -elsif @identifierType=="Uniprot"
            %a.nostyle.menu{:href=>"http://www.uniprot.org/uniprot/#{@identifierName}",:target=>"_blank",:style=>"font-family: Verdana, Arial, Helvetica, sans-serif;color:#074987;font-size:18px;"}
              =@identifierName.upcase
        -if @identifierType == "EMDB" or @identifierType == "PDB"
          = label_tag(:labelForm, "PROTEINS IN THIS MODEL:",:style=>"font-family: Verdana, Arial, Helvetica, sans-serif;font-size:12px;font-weight:bold;color:#606060;")
        -elsif @identifierType=="Uniprot"
          = label_tag(:labelForm, "PDB STRUCTURES:",:style=>"font-family: Verdana, Arial, Helvetica, sans-serif;font-size:12px;font-weight:bold;color:#606060;")
        = select_tag(:alignment, options_for_select(@optionsArray),:onchange=>"firstTime=getValueSelection(this,firstTime);",:title=>"Choose one of the alignments",:prompt=>"SELECT MENU",:style=>"width:300px;margin-left:10px;font-size:10px;font-family: 'Lucida Console', Monaco, monospace")
        #uniprotLogo{:style=>"display:inline;position:relative;top:5px;left:3px;"}
          =link_to(image_tag("uniprot.png",size:"18x18"),"http://www.uniprot.org/",:target=>"_blank")
        #controls
          = image_tag("reset.gif",:onclick=>"javascript:resetEvent();",:align=>"center",:title=>"Reset view",:style=>"cursor:pointer;margin-left:0px;vertical-align:middle;")
          -if @viewerType!="ngl"
            = image_tag("zoom_out.gif",:onclick=>"javascript:zoom(0);",:align=>"center",:title=>"Zoom out",:style=>"cursor:pointer;margin-left:0px;vertical-align:middle;")
            = image_tag("zoom_in.gif",:onclick=>"javascript:zoom(1);",:align=>"center",:title=>"Zoom in",:style=>"cursor:pointer;margin-left:0px;vertical-align:middle;")
            = image_tag("sphere.gif",:onclick=>"javascript:toggleSphere();",:align=>"center",:title=>"Display/hide sphere (only selecting < 3 aa)",:class=>"hideHetero",:style=>"cursor:pointer;vertical-align:middle;")
          = image_tag("atoms.gif",:onclick=>"javascript:addAtomsEvent(this);",:align=>"center",:title=>"Display/hide atoms of selected residues",:style=>"cursor:pointer;vertical-align:middle;")
          -if @viewerType!="ngl"
            = image_tag("neight.gif",:onclick=>"javascript:highlightNeightboursEvent();",:align=>"center",:title=>"Display/hide neighbours (10Ã…)",:style=>"cursor:pointer;vertical-align:middle;")
          = image_tag("hetero.gif",:onclick=>"javascript:toggleHeteroEvent(this);",:align=>"center",:title=>"Display/hide heteroatoms",:class=>"hideHetero",:style=>"cursor:pointer;vertical-align:middle;")
          = image_tag("screenshot.gif",:onclick=>"javascript:takeScreenshot();",:align=>"center",:title=>"Save image - It takes some time",:class=>"hideHetero",:style=>"cursor:pointer;vertical-align:middle;")
          -if @emdb!=""
            = image_tag("volume.gif",:onclick=>"javascript:toggleVolumeEvent(this);",:align=>"center",:title=>"Display/hide volume",:class=>"hideVolume",:style=>"cursor:pointer;vertical-align:middle;")
            -if @viewerType=="ngl"
              %input{:type=>"range",:id=>"chanceSlider",:class=>"vHorizon",:min=>0,:max=>10,:step=>0.5,:value=>5,:style=>"width:300px;margin:5px;margin-top:10px;vertical-align:middle",:title=>"Change threshold"}
              %input{:type=>"text",:name=>"chance",:id=>"chance",:class=>"text",:value=>5,:style=>"width:55px;margin:5px;vertical-align:middle",:title=>"Change threshold"}
            -else
              %input{:type=>"range",:id=>"chanceSlider",:class=>"vHorizon",:min=>@stThr,:max=>@endThr,:step=>@step,:value=>@threshold,:style=>"width:300px;margin:5px;margin-top:10px;vertical-align:middle",:title=>"Change threshold"}
              %input{:type=>"text",:name=>"chance",:id=>"chance",:class=>"text",:value=>@threshold,:style=>"width:55px;margin:5px;vertical-align:middle",:title=>"Change threshold"}}
  -if @changeSelector==true
    :javascript
      $j(document).ready(function(){
        document.getElementById('alignment').selectedIndex=1;
        firstTime=getValueSelection(document.getElementById('alignment'),firstTime);
      });
  :javascript
    var firstTime = true;
    var alignmentTranslation;
    var uniprotLength = '#{@uniprotLength}';
    $j(document).ready(function(){
      $j('#chance').keypress(function(event){
        if(event.keyCode==13){
          event.preventDefault();
        }
      });
      $j('#upRightBottomFrame').load(function(){
        document.getElementById('upRightBottomFrame').contentWindow.body.addEventListener("AnnotsCoordinatesInfo",function(evt){
          var start = evt.detail[0];
          var end = evt.detail[1];
          var genomic_flag = evt.detail[2];
          if(alignmentTranslation!=undefined){
            var evtOut2 = document.createEvent("CustomEvent");
            var pdbPosList = getRangesFromTranslation(start,end,alignmentTranslation);
            evtOut2.initCustomEvent("RangeMolInfo",true,true,pdbPosList);
            document.getElementById("leftBottomFrame").contentWindow.dispatchEvent(evtOut2);
          }
          if(genomic_flag){
            var evtOut = document.createEvent("CustomEvent");
            evtOut.initCustomEvent("RangeInfo",true,true,[start,end]);
            document.getElementById("downRightBottomFrame").contentWindow.dispatchEvent(evtOut);
            var evtOut3 = document.createEvent("CustomEvent");
            evtOut3.initCustomEvent("GeneRange",true,true,[start,end]);
            document.getElementById("genomicFrame").contentWindow.dispatchEvent(evtOut3);
          }
        });
      });
      $j('#downRightBottomFrame').load(function(){
        document.getElementById('downRightBottomFrame').contentWindow.body.addEventListener("SequenceCoordinates",function(evt){
          var start = evt.detail[0];
          var end = evt.detail[1];
          var evtOut = document.createEvent("CustomEvent");
          evtOut.initCustomEvent("RangeFamInfo",true,true,[start,end]);
          document.getElementById("upRightBottomFrame").contentWindow.dispatchEvent(evtOut);
          if(alignmentTranslation!=undefined){
            var evtOut2 = document.createEvent("CustomEvent");
            var pdbPosList = getRangesFromTranslation(start,end,alignmentTranslation);
            evtOut2.initCustomEvent("RangeMolInfo",true,true,pdbPosList);
            document.getElementById("leftBottomFrame").contentWindow.dispatchEvent(evtOut2);
          }
          var evtOut3 = document.createEvent("CustomEvent");
          evtOut3.initCustomEvent("GeneRange",true,true,[start,end]);
          document.getElementById("genomicFrame").contentWindow.dispatchEvent(evtOut3);
        });
      });
      $j('#genomicFrame').load(function(){
        document.getElementById('genomicFrame').contentWindow.body.addEventListener("GeneCoordinates",function(evt){
          var start = evt.detail[0];
          var end = evt.detail[1];
          var evtOut = document.createEvent("CustomEvent");
          evtOut.initCustomEvent("RangeFamInfo",true,true,[start,end]);
          document.getElementById("upRightBottomFrame").contentWindow.dispatchEvent(evtOut);
          var evtOut = document.createEvent("CustomEvent");
          evtOut.initCustomEvent("RangeInfo",true,true,[start,end]);
          document.getElementById("downRightBottomFrame").contentWindow.dispatchEvent(evtOut);
          if(alignmentTranslation!=undefined){
            var evtOut2 = document.createEvent("CustomEvent");
            var pdbPosList = getRangesFromTranslation(start,end,alignmentTranslation);
            evtOut2.initCustomEvent("RangeMolInfo",true,true,pdbPosList);
            document.getElementById("leftBottomFrame").contentWindow.dispatchEvent(evtOut2);
          }
        });
      });
      $j('#leftBottomFrame').load(function(){
        if($j('#leftBottomFrame').attr('src')=="jsmolIFrame"){
          $j('#leftBottomFrame')[0].src = "/jsmolIFrame/?viewer_type=#{@viewerType}&origin=#{@identifierType}&pdbs="+encodeURI('#{@pdbs.to_json}'+"&emdb=#{@emdb}");
        }
      });
      //$j('#alignment > option:selected').removeAttr('selected').next('option').attr('selected', 'selected');
      //$j('#alignment').trigger('change');
     });
  #wrapperBottomFrame
    #bottomFrame
      #leftBottom
        -if @viewerType=="chimera"
          %iframe#leftBottomFrame{:src=>"jsmolIFrame",:scrolling=>"yes",:style=>"display:none"}
        -else
          %iframe#leftBottomFrame{:src=>"jsmolIFrame",:scrolling=>"yes"}
          %iframe#downRightBottomFrame{:src=>"sequenceIFrame",:scrolling=>"yes"}
      #rightBottom
        %iframe#upRightBottomFrame{:src=>"annotationsIFrame",:scrolling=>"yes"}
        %iframe#genomicFrame{:src=>"genomicIFrame",:scrolling=>"yes"}
